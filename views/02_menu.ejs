<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Menu</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/menu.css" type="text/css" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/menuJQ.js"></script>
  </head>

  <body>
    <nav id="nav">
      <a href="#menu-drinks"><button>Drinks</button></a>
      <a href="#menu-appetizers"><button>Appetizers</button></a>
      <a href="#menu-mains"><button>Mains</button></a>
      <form action="/cart" method="get">
        <label>Go To</label>
        <button type="submit">CART</button>
      </form>
    </nav>
    <!-- following section is to display indevidual food items -->
    <main id="menu-items">
      <!-- DRINK ITEMS -->
      <br id="menu-drinks"/>
      <h2>Drinks</h2>
      <%for (let item in drinks) {%>
      <article class="menu-item">
        <div class="food-item-header">
          <img src="<%= drinks[item].image %>" />
          <!-- this will be the image for the item -->
          <div>
            <h3><%= drinks[item].title %></h3>
            <p><%= drinks[item].description %></p>
          </div>
        </div>
        <div class="food-item-footer">
          <h4>$<%= drinks[item].price %></h4>
          <div>
            <form
              id="<%= drinks[item].id %>-add"
              class="add-food"
              action="/menu/add/<%= drinks[item].id %>"
              method="post"
              name="<%= drinks[item].id %>"
            >
              <button id="add-btn" class="plus-button" type="submit">+</button>
            </form>
            <br />
            <output id="<%= drinks[item].id %>" name="counter" value="0" class="counter">0</output>
            <br />
            <form
              id="<%= drinks[item].id %>-minus"
              class="minus-food"
              action="/menu/minus/<%= drinks[item].id %>"
              method="post"
              name="<%= drinks[item].id %>"
            >
              <button id="minus-btn" class="minus-button" type="submit">
                -
              </button>
            </form>
          </div>
        </div>
      </article>
      <% } %>
      <!-- APPETIZER ITEMS -->
      <br id="menu-appetizers"/>
      <h2>Appetizers</h2>
      <%for (let item in appetizers) {%>
      <article class="menu-item">
        <div class="food-item-header">
          <img src="<%= appetizers[item].image %>" />
          <!-- this will be the image for the item -->
          <div>
            <h3><%= appetizers[item].title %></h3>
            <p><%= appetizers[item].description %></p>
          </div>
        </div>
        <div class="food-item-footer">
          <h4><%= appetizers[item].price %></h4>
          <div>
            <form
              id="<%= appetizers[item].id %>-add"
              class="add-food"
              action="/menu/add/<%= drinks[item].id %>"
              method="post"
              name="<%= appetizers[item].id %>"
            >
              <button id="add-btn" type="submit">+</button>
            </form>
            <br />
            <output id="<%= appetizers[item].id %>" name="counter" class="counter">0</output>
            <br />
            <form
              id="<%= appetizers[item].id %>-minus"
              class="minus-food"
              action="/menu/minus/<%= drinks[item].id %>"
              method="post"
              name="<%= appetizers[item].id %>"
            >
              <button type="submit">-</button>
            </form>
          </div>
        </div>
      </article>
      <% } %>
      <!-- MAIN ITEMS -->
      <br id="menu-mains"/>
      <h2>Mains</h2>
      <% for (let item in mains){ %>
      <article class="menu-item">
        <div class="food-item-header">
          <img src="<%= mains[item].image %>" />
          <!-- this will be the image for the item -->
          <div>
            <h3><%= mains[item].title %></h3>
            <p><%= mains[item].description %></p>
          </div>
        </div>
        <div class="food-item-footer">
          <h4>$<%= mains[item].price %></h4>
          <div>
            <form
              id="<%= mains[item].id %>-add"
              class="add-food"
              action="/menu/add/<%= drinks[item].id %>"
              method="post"
              name="<%= mains[item].id %>"
            >
              <button type="submit">+</button>
            </form>
            <br />
            <output id="<%= mains[item].id %>" name="counter" class="counter">0</output>
            <br />
            <form
              id="<%= mains[item].id %>-minus"
              class="minus-food"
              action="/menu/minus/<%= mains[item].id %>"
              method="post"
              name="<%= mains[item].id%>"
              ;
            >
              <button type="submit">-</button>
            </form>
          </div>
        </div>
      </article>
      <% } %>
    </main>
  </body>
</html>
