<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Cart</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <!-- <link rel="stylesheet" href="/styles/main.css" type="text/css" /> -->
    <!-- <link rel="stylesheet" href="/styles/layout.css" type="text/css" /> -->
    <link rel="stylesheet" href="/styles/cart.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>

  <body>
    <nav id="nav">
      <i class="fa-solid fa-angle-left"></i>
      <h2 class="title">
        My
        Cart List
      </h2>
    </nav>

    <main>
    <% for (let item in food) { %>
    <div class="cart-list-container">
      <img id="images" src="<%= food[item].image %>" />
      <div class="food-info">
        <p><b><%= food[item].title %></b></p>
        <div class="price-qty">
          <p><%= food[item].food_count %></p>
          <p>$<%= food[item].total_price %></p>
        </div>
      </div>
    </div>
    <% } %>

    <div class="total-price">
      <h4 class="total-price-text">Todays Total $<%= totalCost %></h4>

    </div>

    <form action="/confirmation" method="GET">
      <button class="checkout-button" type="submit">Checkout</button>
    </form>
  </main>
  </body>
</html>
