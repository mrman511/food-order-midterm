<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Cart</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <!-- <link rel="stylesheet" href="/styles/main.css" type="text/css" /> -->
    <!-- <link rel="stylesheet" href="/styles/layout.css" type="text/css" /> -->
    <link rel="stylesheet" href="/styles/cart.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>

  <body>
    <nav id="nav">
      <i class="fa-solid fa-angle-left"></i>
    </nav>

    <h1 class="title">
      My <br />
      Cart List
    </h1>
    <% for (let item in food) { %>
    <div class="cart-list-container">
      <img id="images" src="<%= food[item].image %>" />
      <div class="food-info">
        <p><b><%= food[item].title %></b></p>
        <p><%= food[item].price %></p>
      </div>
      <div class="icons">

      <form action="/cart" method="POST" name="<%= food[item].id %>" id="<%= food[item].id %>">
        <button class="plus-button" type="submit">
          <i class="fa-solid fa-plus"></i>
        </button>
      </form>

      <div>
        <input class="counter" value="0" type="text"></input>
      </div>

      <form action="/cart" method="POST" name="<%= food[item].id %>" id="<%= food[item].id %>">
        <button class="minus-button" type="submit">
          <i class="fa-solid fa-minus"></i>
        </button>
      </form>

    </div>
    </div>
    <% } %>

    <form action="/confirmation" method="GET">
      <button class="checkout-button" type="submit">Checkout</button>
    </form>
  </body>
</html>
